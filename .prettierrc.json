{
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "endOfLine": "auto",
  "trailingComma": "none",
  "arrowParens": "always",
  "importOrder": [
    "^(node:)(.*)$",
    "^express(.*)$",
    "^[a-zA-Z](.*)$",
    "^@/types/(.*)$",
    "^@/constants/(.*)$",
    "^@/utils/(.*)$",
    "^@/services/(.*)$",
    "^@/middlewares/(.*)$",
    "^@/validators/(.*)$",
    "^@/controllers/(.*)$",
    "^@/routes/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
